@{
    ViewData["Title"] = "Spotify Showcase";
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="app">
    <div class="toolbar">
        <div class="toolbar-left">
            <div class="field">
                <label>Language</label>
                <select id="locale">
                    <option value="en-US">English (US)</option>
                    <option value="de-DE">German (DE)</option>
                </select>
            </div>

            <div class="field">
                <label>Seed</label>
                <div class="seed-row">
                    <input id="seed" type="number" step="1" />
                    <button id="randomSeed" class="icon-btn" title="Random seed">⟳</button>
                </div>
            </div>

            <div class="field">
                <label>Likes</label>
                <div class="likes-row">
                    <input id="likes" type="range" min="0" max="10" step="0.1" />
                    <span id="likesVal" class="pill">3.7</span>
                </div>
            </div>
        </div>

        <div class="toolbar-right">
            <div class="view-toggle" role="group" aria-label="View toggle">
                <button id="btnTable" class="toggle-btn active" title="Table">▦</button>
                <button id="btnGallery" class="toggle-btn" title="Gallery">▢</button>
            </div>
        </div>
    </div>

    <div id="content"></div>
</div>

<script src="~/js/app.js"></script>
